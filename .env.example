# ============================================
# VARIABLES DE ENTORNO - Portfolio
# ============================================
#
# ESTRUCTURA:
# .env         → Produccion (NO se commitea)
# .env.local   → Desarrollo (NO se commitea, override de .env)
# .env.example → Template (SE COMMITEA)
#
# COMO USAR:
# 1. Copiar este archivo a .env (valores de produccion)
# 2. Copiar este archivo a .env.local (valores de desarrollo)
# 3. En Vercel: configurar los secretos
#
# ============================================

# ============================================
# SITE
# ============================================
# Desarrollo: http://localhost:3000
# Produccion: https://tudominio.com
NEXT_PUBLIC_SITE_URL=http://localhost:3000
NEXT_PUBLIC_SITE_NAME="Tu Nombre - Portfolio"

# ============================================
# DATABASE
# ============================================
# Desarrollo: SQLite
DATABASE_URL="file:./prisma/dev.db"
# Produccion: PostgreSQL
# DATABASE_URL="postgresql://user:password@host:5432/database?pgbouncer=true"

# ============================================
# FEATURE FLAGS
# ============================================
NEXT_PUBLIC_ENABLE_ANALYTICS=false

# ============================================
# SANITY CMS
# ============================================
NEXT_PUBLIC_SANITY_PROJECT_ID="tu_project_id"
NEXT_PUBLIC_SANITY_DATASET="production"
NEXT_PUBLIC_SANITY_API_VERSION="2024-01-01"
SANITY_API_READ_TOKEN=""
SANITY_API_WRITE_TOKEN=""

# ============================================
# GITHUB
# ============================================
NEXT_PUBLIC_GITHUB_USERNAME="tu_username"
GITHUB_TOKEN=""

# ============================================
# EMAIL (Resend)
# ============================================
# Obtener API key de: https://resend.com/api-keys
RESEND_API_KEY=""
# Desarrollo: onboarding@resend.dev
# Produccion: noreply@tudominio.com
RESEND_FROM_EMAIL="onboarding@resend.dev"
RESEND_TO_EMAIL="tu@email.com"

# ============================================
# RATE LIMITING (Upstash Redis)
# ============================================
UPSTASH_REDIS_REST_URL=""
UPSTASH_REDIS_REST_TOKEN=""

# ============================================
# COMMENTS (Giscus)
# ============================================
# Configurar en: https://giscus.app/
NEXT_PUBLIC_GISCUS_REPO="usuario/repositorio"
NEXT_PUBLIC_GISCUS_REPO_ID=""
NEXT_PUBLIC_GISCUS_CATEGORY="Announcements"
NEXT_PUBLIC_GISCUS_CATEGORY_ID=""

# ============================================
# ERROR TRACKING (Sentry)
# ============================================
NEXT_PUBLIC_SENTRY_DSN=""
SENTRY_ORG=""
SENTRY_PROJECT=""
# Solo produccion (source maps):
# SENTRY_AUTH_TOKEN=""

# ============================================
# ADMIN - GitHub OAuth
# ============================================
# Crear OAuth App en: https://github.com/settings/developers
#
# DESARROLLO:
#   Homepage URL: http://localhost:3000
#   Callback URL: http://localhost:3000/api/auth/callback/github
#
# PRODUCCION (crear app separada):
#   Homepage URL: https://tudominio.com
#   Callback URL: https://tudominio.com/api/auth/callback/github
#
GITHUB_CLIENT_ID=""
GITHUB_CLIENT_SECRET=""

# ============================================
# NEXTAUTH
# ============================================
# Generar secret con: openssl rand -base64 32
AUTH_SECRET=""
# AUTH_URL se detecta automaticamente en Vercel
# Solo configurar si hay problemas:
# AUTH_URL=http://localhost:3000

# Emails de administradores (separados por coma)
ADMIN_EMAILS="admin@example.com"
