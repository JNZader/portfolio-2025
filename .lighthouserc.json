{
  "ci": {
    "collect": {
      "startServerCommand": "npm run start",
      "startServerReadyPattern": "Ready|started server|localhost",
      "startServerReadyTimeout": 60000,
      "url": [
        "http://localhost:3000",
        "http://localhost:3000/blog",
        "http://localhost:3000/proyectos",
        "http://localhost:3000/contacto",
        "http://localhost:3000/sobre-mi"
      ],
      "numberOfRuns": 3,
      "settings": {
        "chromeFlags": "--no-sandbox --disable-dev-shm-usage"
      }
    },
    "assert": {
      "preset": "lighthouse:no-pwa",
      "assertions": {
        "categories:performance": ["warn", {"minScore": 0.70}],
        "categories:accessibility": ["error", {"minScore": 0.90}],
        "categories:best-practices": ["error", {"minScore": 0.85}],
        "categories:seo": ["error", {"minScore": 0.90}],
        "first-contentful-paint": ["warn", {"maxNumericValue": 3500}],
        "largest-contentful-paint": ["warn", {"maxNumericValue": 5500}],
        "cumulative-layout-shift": ["warn", {"maxNumericValue": 0.25}],
        "total-blocking-time": ["warn", {"maxNumericValue": 500}],
        "interactive": ["warn", {"maxNumericValue": 6000}],
        "speed-index": ["warn", {"maxNumericValue": 5000}],
        "errors-in-console": "off",
        "unused-javascript": "off",
        "lcp-lazy-loaded": "off",
        "non-composited-animations": "off",
        "prioritize-lcp-image": "off",
        "bf-cache": "off",
        "label-content-name-mismatch": "off",
        "heading-order": "warn",
        "meta-description": "warn",
        "max-potential-fid": "off"
      }
    },
    "upload": {
      "target": "temporary-public-storage"
    }
  }
}
